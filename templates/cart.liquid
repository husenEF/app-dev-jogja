<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow p-6 max-w-3xl mx-auto">
    <h1 class="text-2xl font-bold mb-2 text-center">Shopping Cart</h1>
    {% if cart.item_count == 0 %}
      <div class="flex flex-col items-center justify-center py-16">
        <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
          <circle cx="9" cy="21" r="1"/>
          <circle cx="20" cy="21" r="1"/>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
        </svg>
        <h2 class="text-lg font-semibold mb-2">Your cart is empty</h2>
        <p class="text-gray-500 mb-4 text-center">Looks like you haven't added anything yet.</p>
        <a href="/collections/all" class="inline-block bg-black text-white px-6 py-2 rounded hover:bg-gray-800 transition">Continue Shopping</a>
      </div>
    {% else %}
      <form action="/cart" method="post">
        <div class="divide-y divide-gray-200 mb-6">
          {% for item in cart.items %}
            <div class="flex flex-col md:flex-row items-center py-4 gap-4">
              <a href="{{ item.url }}" class="flex-shrink-0">
                {% if item.image %}
                  <img src="{{ item.image | img_url: '240x240' }}" alt="{{ item.title | escape }}" class="w-24 h-24 object-contain rounded border">
                {% else %}
                  <div class="w-24 h-24 flex items-center justify-center bg-gray-100 text-gray-400 rounded border">No Image</div>
                {% endif %}
              </a>
              <div class="flex-1 w-full">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                  <div>
                    <a href="{{ item.url }}" class="font-semibold text-gray-800 hover:underline">{{ item.product.title }}</a>
                    {% unless item.product.has_only_default_variant %}
                      <div class="text-xs text-gray-500">{{ item.variant.title }}</div>
                    {% endunless %}
                    {% if item.properties.size > 0 %}
                      <div class="text-xs text-gray-500">
                        {% for property in item.properties %}
                          {% unless property.last == blank %}
                            <div>{{ property.first }}: {{ property.last }}</div>
                          {% endunless %}
                        {% endfor %}
                      </div>
                    {% endif %}
                  </div>
                  <div class="mt-2 md:mt-0 flex items-center gap-2">
                    <input type="number" name="updates[{{ item.key }}]" value="{{ item.quantity }}" min="0" class="w-16 px-2 py-1 border rounded text-center">
                    <span class="ml-2 text-gray-600">x</span>
                    <span class="ml-2 font-medium">{{ item.final_price | money }}</span>
                    <button type="submit" name="updates[{{ item.key }}]" value="0" class="ml-4 text-red-500 hover:text-red-700" title="Remove">
                      <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M6 18L18 6M6 6l12 12"/>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="flex flex-col md:flex-row justify-between items-center border-t pt-6">
          <div class="mb-4 md:mb-0">
            <span class="text-lg font-semibold">Subtotal:</span>
            <span class="text-lg font-bold">{{ cart.total_price | money }}</span>
            <div class="text-xs text-gray-500">Shipping & taxes calculated at checkout.</div>
          </div>
          <button type="submit" name="checkout" class="bg-black text-white px-8 py-3 rounded font-semibold hover:bg-gray-800 transition">Checkout</button>
        </div>
      </form>
    {% endif %}
  </div>
</div>
