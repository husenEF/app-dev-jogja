<div class="container mx-auto px-4 py-10">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-3xl md:text-4xl font-bold mb-8 text-center">{{ collection.title }}</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      {% for product in collection.products %}
        <div class="bg-white rounded-xl shadow hover:shadow-lg transition p-4 flex flex-col">
          <a href="{{ product.url }}" class="flex flex-col flex-1 group">
            <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-lg bg-gray-50 flex items-center justify-center">
              {% if product.featured_image %}
                <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}" class="object-contain w-full h-full group-hover:scale-105 transition duration-200" loading="lazy">
              {% else %}
                <div class="text-gray-300 text-5xl">üõçÔ∏è</div>
              {% endif %}
            </div>
            <div class="mt-4 flex-1 flex flex-col items-center text-center">
              <h2 class="text-lg font-semibold mb-1 text-gray-900 group-hover:text-black">{{ product.title }}</h2>
              <span class="text-base font-bold text-gray-700">{{ product.price | money }}</span>
            </div>
          </a>
        </div>
      {% else %}
        <p class="col-span-3 text-center text-gray-500 py-12">No products found in this collection.</p>
      {% endfor %}
    </div>
  </div>
</div>
