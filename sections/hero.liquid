<section class="hero">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-4">{{ section.settings.heading }}</h1>
    <p class="text-2xl mb-8">{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.call_to_action_url }}" class="bg-black text-white px-8 py-3 rounded hover:bg-gray-800 transition">{{ section.settings.call_to_action_text }}</a>
  </div>
    <div style="background-image: url('{{ section.settings.background_image | img_url: width: 1920 }}')" class="bg-cover bg-no-repeat bg-center h-96"></div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "The best products at the best prices"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "call_to_action_text",
      "label": "Call to Action Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "call_to_action_url",
      "label": "Call to Action URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "General"
    }
  ]
}
{% endschema %}